{
    "name": "@taskmanager/backend",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "build": "rimraf dist && tsc -b ./tsconfig.json",
        "start": "node dist/index.js",
        "prettyfy": "prettier --loglevel warn --cache --write 'src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
        "type": "tsc --noEmit --project ./tsconfig.json"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.5",
        "@types/node": "^24.10.1",
        "prettier": "^3.7.3",
        "rimraf": "^6.1.2",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@trpc/server": "^11.7.2",
        "cors": "^2.8.5",
        "express": "^5.2.0"
    }
}