{
    "name": "backend",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "build": "rimraf dist && tsc -b ./tsconfig.json",
        "start": "node dist/index.js",
        "prettyfy": "prettier --loglevel warn --cache --write 'src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'"
    },
    "pnpm": {
        "overrides": {
            "glob@<8.0.0": "^8.0.0",
            "rimraf@<3.0.0": "^3.0.0",
            "inflight@<1.0.6": "^1.0.6"
        }
    },
    "devDependencies": {
        "@types/node": "^24.10.1",
        "prettier": "^3.7.3",
        "rimraf": "^6.1.2",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.9.3"
    }
}