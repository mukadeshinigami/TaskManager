{
  "name": "taskmanager",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "b": "pnpm --filter @taskmanager/backend ",
    "w": "pnpm --filter @taskmanager/webapp ",
    "dev": "pnpm -r --parallel dev",
    "type": "concurrently \"pnpm b type\" \"pnpm w type\"",
    "prettyfy": "pnpm -r --parallel prettyfy",
    "lint": "concurrently \"pnpm b lint\" \"pnpm w lint\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md,html}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-react-app": "^7.0.1",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.3",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
